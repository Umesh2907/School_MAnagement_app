  <h1>Teachers list</h1>

  <%# <%= link_to 'Add New Teacher' , new_teacher_path %>

  <%= link_to 'Export CSV', school_teachers_path(format: "csv"), class:'btn btn-primary' %><br/>
  <table id="teachers-datatable" data-source="<%= school_teachers_path(format: :json) %>">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Dob</th>
      <th>Gender</th>
      <th>Email</th>
      <th>Subject</th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>
<script>
  jQuery(document).ready(function() {
  $('#teachers-datatable').dataTable({
    "processing": true,
    "serverSide": true,
    "ajax": {
      "url": $('#teachers-datatable').data('source')
    },
    "pagingType": "full_numbers",
    "columns": [
      {"data": "id"},
      {"data": "name"},
      {"data": "birth_date"},
      {"data": "gender"},
      {"data": "email"},
      {"data": "subject"},
    ]
    });
});
</script>

